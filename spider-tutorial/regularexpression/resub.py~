# !/usr/bin/env python
# -*- coding: utf-8 -*-

import re

pattern = re.compile(r'(\w+)(\w+)')

s = 'I say, hello world !'

# use r'\2 \1' to replace patttern in s
print re.sub(pattern, r'\2 \1', s)

def function(m):
    print m.group(1).title() + ' ' + m.group(2).title()
    
print re.sub(pattern, function, s)

 
